<main class="container p5">
  {{>errors}}
  {{>messages}}
</main>
<div class="container mt-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card text-center">
        <div class="card-header">
          <h3>Crea una cuenta</h3>
        </div>
        <div class="card-body">
          <img src="/img/logo-bootstrap.jpg" class="rounded-circle mx-auto d-block m-4 logo">
          <form action="/usuarios/signup" method="POST">
            <div class="form-group">
              <input type="text" class="form-control" name="nombre" placeholder="Nombre" value="{{nombre}}">
            </div>
            <div class="form-group">
              <input type="email" class="form-control" name="email" placeholder="Email" value="{{email}}">
            </div>
            <div class="form-group">
              <input type="password" class="form-control" name="password" placeholder="Password" value="{{password}}">
            </div>
            <div class="form-group">
              <input type="password" class="form-control" name="confirm_password" placeholder="Confirmar Password"
                value="{{confirm_password}}">
            </div>
            <button class="btn btn-primary ">
              <i class="fas fa-user-plus"></i> Registrar
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>